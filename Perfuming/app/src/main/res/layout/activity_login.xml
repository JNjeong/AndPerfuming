<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/LogoPageLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIntro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"

            android:fontFamily="@font/dosis_extrabold"
            android:gravity="bottom"
            android:paddingLeft="20dp"
            android:text="오늘 내 향수는"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"

            android:fontFamily="@font/dosis_extrabold"
            android:gravity="center|top"
            android:text="Perfuming"
            android:textColor="#F18AAD"
            android:textSize="70sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/perfume" />

            <TextView
                android:id="@+id/tvSubTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:fontFamily="@font/dosis_extrabold"
                android:gravity="right|top"
                android:paddingRight="20dp"
                android:text="퍼퓨밍❤" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LoginLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:id="@+id/idLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login_layout_rounded"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvId"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/dosis_extrabold"
                android:gravity="center"
                android:text="ID"
                android:textColor="#B388FF"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pwLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_layout_rounded"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPw"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/dosis_extrabold"
                android:gravity="center"
                android:text="PW"
                android:textColor="#B388FF"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etPw"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/autoLoginLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:gravity="right"
        android:paddingRight="30dp">

        <CheckBox
            android:id="@+id/cbAutologin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:fontFamily="@font/dosis_extrabold"
            android:text="Auto LogIn"
            android:textColor="#B388FF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LoginSignin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="top"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:fontFamily="@font/dosis_extrabold"
            android:text="Log In"
            android:textColor="#F18AAD"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnSignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:fontFamily="@font/dosis_extrabold"
            android:text="Sign in"
            android:textColor="#F18AAD"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emailLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FBFBFB"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnGoogleImg"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/google" />

            <Button
                android:id="@+id/btnGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:fontFamily="@font/itim"
                android:text="Google"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnNaverImg"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/naver" />

            <Button
                android:id="@+id/btnNaver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:fontFamily="@font/itim"
                android:text="Naver"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnDaumImg"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/daum" />

            <Button
                android:id="@+id/btnDaum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:fontFamily="@font/itim"
                android:text="Daum"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>