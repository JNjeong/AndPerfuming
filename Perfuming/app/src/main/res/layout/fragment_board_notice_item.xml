<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/noticelayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mi_notice_g"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/login_layout_rounded"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mi_tv_notice_g"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/dosis_extrabold"
                android:gravity="center"
                android:text="공지"
                android:textColor="#B388FF"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mi_notice_j"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/login_layout_rounded"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/mi_tv_notice_j"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/dosis_extrabold"
                android:gravity="center"
                android:text="점검"
                android:textColor="#B388FF"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mi_notice_u"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/login_layout_rounded"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/mi_tv_notice_u"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/dosis_extrabold"
                android:gravity="center"
                android:text="업데이트"
                android:textColor="#B388FF"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/mi_notice_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(2021.10.22) 퍼퓨밍 저작권 및 안내"
            android:textColor="#2B2B2B"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>