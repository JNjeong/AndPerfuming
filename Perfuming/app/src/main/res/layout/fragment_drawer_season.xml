<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_marginRight="30dp"
    android:orientation="vertical"
    tools:context=".drawerFragment.DrawerSeasonFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imgbtnSpring"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="30dp"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/bloomy" />

            <ImageButton
                android:id="@+id/imgbtnSummer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="30dp"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/sunny" />

            <ImageButton
                android:id="@+id/imgbtnFall"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/fally" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imgbtnWinter"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="30dp"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/snowy" />

            <ImageButton
                android:id="@+id/imgbtnRain"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="30dp"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                android:src="@drawable/rainy" />
        </TableRow>

    </TableLayout>

</LinearLayout>